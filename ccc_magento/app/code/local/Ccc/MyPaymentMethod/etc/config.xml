<?xml version="1.0"?>
<config>
	<modules>
		<Ccc_MyPaymentMethod>
			<version>0.0.1</version>
		</Ccc_MyPaymentMethod>
	</modules>
	<global>
		<models>
			<mypaymentmethod>
				<class>Ccc_MyPaymentMethod_Model</class>
			</mypaymentmethod>
		</models>
		<blocks>
			<mypaymentmethod>
				<class>Ccc_MyPaymentMethod_Block</class>
			</mypaymentmethod>
		</blocks>
		<helpers>
			<mypaymentmethod>
				<class>Ccc_MyPaymentMethod_Helper</class>
			</mypaymentmethod>
		</helpers>
	</global>
	<default>
		<payment>
			<mypaymentmethod>
				<model>mypaymentmethod/standard</model>
				<active>1</active>
				<order_status>pending</order_status>
				<title>COD</title>
				<payment_action>sale</payment_action>
				<!-- <submit_url>https://someurl.com</submit_url>
				<merchant_id>Insert merchant id</merchant_id> -->
				<allowspecific>0</allowspecific>
				<sort_order>1</sort_order>
			</mypaymentmethod>
		</payment>
	</default>
</config>